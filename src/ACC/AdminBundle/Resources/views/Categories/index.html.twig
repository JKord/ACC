{% extends 'ACCAdminBundle::layout.html.twig' %}
{% block title %}Categories list{% endblock %}

{% block right%}
<div class="section">
	<div class="box">
		<div class="title">
			Categories list
			<span class="hide"></span>
		</div>
		<div class="content">
<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('categories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('categories_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('categories_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<ul>
    <li>
        <a href="{{ path('categories_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
		</div>
	</div>
</div>
{% endblock %}
