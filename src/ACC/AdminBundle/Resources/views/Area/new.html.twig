{% extends 'ACCAdminBundle::layout.html.twig' %}
{% block title %}Area edit{% endblock %}

{% form_theme form 'ACCAdminBundle:Form:row_div.html.twig' %}

{% block right%}
<div class="section">
	<div class="box">
		<div class="title">
			Area creation
			<span class="hide"></span>
		</div>
		<div class="content">
			<form action="{{ path('area_create') }}" method="post" {{ form_enctype(form) }}>
    			{{ form_widget(form) }}
    			<p>
        			<button type="submit" class="btn">Create</button>
    			</p>
			</form>
			<div class="row">
				<a href="{{ path('area') }}" class="btn">Назад до списку</a>
			</div>
		</div>
	</div>
</div>
{% endblock %}