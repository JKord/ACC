{% extends 'ACCAdminBundle::layout.html.twig' %}
{% block title %}Area edit{% endblock %}

{% form_theme edit_form 'ACCAdminBundle:Form:row_div.html.twig' %}

{% block right%}
<div class="section">
	<div class="box">
		<div class="title">
			Area edit
			<span class="hide"></span>
		</div>
		<div class="content">
			<form action="{{ path('area_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    			{{ form_widget(edit_form) }}
    			<p>
        			<button type="submit" class="btn">Edit</button>
    			</p>
			</form>
			<div class="row">
				<a href="{{ path('area') }}" class="btn">Назад до списку</a>  
				<form action="{{ path('area_delete', { 'id': entity.id }) }}" method="post" class="form_inline">
            		{{ form_widget(delete_form) }}
            		<button type="submit" class="btn">Видалити</button>
        		</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}